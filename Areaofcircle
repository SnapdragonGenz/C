#include <stdio.h>

int main() {
    float radius, area;
    const float PI = 3.14159;

    // Input radius from user
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate the area of the circle
    area = PI * radius * radius;

    // Output the result
    printf("The area of the circle is: %.2f\n", area);

    return 0;
}
